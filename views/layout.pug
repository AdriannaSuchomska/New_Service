doctype html
mixin item(title, url)
  li(class='list-item')
    a(href=url class=path == url ? 'website_tab' : '' )=title
    

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul 
        +item('Strona główna', '/')
        +item('Aktualnie w Tatrach', '/topNews')
        +item('Ankieta', '/questionnaire')
        +item('Administrator', '/admin')
     

    block content
